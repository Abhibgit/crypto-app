<!DOCTYPE html>
<html>
  <head>
    <title><%= user.name %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav>
      <a class="getStarted" href="/">Home</a>
      <a class="getStarted" href="/coins">Get started</a>
      <a class="getStarted" href="/users">Show users</a>
    </nav>
    <h1><%= user.name %></h1>
    <p>Name <%= user.name %></p>
    <div>Coins:</div>
    <ul>
      <%- user.coin.map(c => `
      <li>${c.name} <small>${c.price}</small></li>
      ` ).join('') %>
    </ul>

    <form id="add-per-to-coin" action="/users/<%=user.id%>/coin" method="POST">
      <select name="coinId">
        <%- coins.map(c => `
        <option value="${c._id}">${c.name}</option>
        ` ).join('') %>
      </select>
      <button type="submit">Add coin to User</button>
    </form>
  </body>
</html>
